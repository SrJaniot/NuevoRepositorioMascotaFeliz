        <select class="inputtxt" id="combobox" asp-for="DuenoID" >
            <option value="-2">- Seleccionar -</option>
            @foreach (var x in Model.ListaDueno)
            {
                <option value="@x.Id">- @x.Nombres @x.Apellidos -</option>
                
            }



        </select>

        <select class="inputtxt" id="combobox" asp-for="VeterinarioID" >
            <option value="-2">- Seleccionar -</option>
            @foreach (var x in Model.ListaVeterinario)
            {
                <option value="@x.Id">- @x.Nombres @x.Apellidos -</option>
                
            }



        </select>

        

        <button class="boton" id="btnRegistrar" type="submit">Registrar</button>

       






    </form>


